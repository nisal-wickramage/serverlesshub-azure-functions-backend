{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "func",
      "command": "host start --script-root src",
      "problemMatcher": "$func-node-watch",
      "isBackground": true,
      "dependsOn": "npm build"
    },
    {
      "type": "shell",
      "label": "npm build",
      "command": "npm run build",
      "dependsOn": "npm install",
      "problemMatcher": "$tsc"
    },
    {
      "type": "shell",
      "label": "npm install",
      "command": "npm install"
    },
    {
      "type": "shell",
      "label": "npm prune",
      "command": "npm prune --production",
      "dependsOn": "npm build",
      "problemMatcher": []
    }
  ]
}
